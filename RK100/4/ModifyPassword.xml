<?xml version="1.0" encoding="utf-8" ?>
<PageModifyPassword>
	<VerticalLayout name="NetworkSetuplayout" >
	
		<VerticalLayout>
			<Label float="true" pos="0,17,0,0" width="100" height="18" text="密码修改" textcolor="#FF242424" font="0" align="left" />
		
			<Button name="save" float="true" pos="760,18,0,0" width="80" height="28" text="保存" font="2" textcolor="ff5f5f5f" hottextcolor="ffffffff" pushedtextcolor="ff007ac0" bkcolor="feeff2f4" hotimage="res\public\button\bottonbk.png" pushedbkcolor="feffffff" bordersize="1" bordercolor="fedcdfe1"/>
	
			<Label float="true" pos="0,54,0,0" width="100" height="18" text="当前密码" textcolor="#FF4E4E4E" font="1" align="left" />
			<Edit name="InputCurPwd" float="true" pos="106,53,0,0" width="240" height="20" text="" textcolor="#FF4E4E4E" font="1" align="left" maxchar="16" password="true"/>
			<Button name="CurPwdVisSwitchBtn" float="true" pos="346,53,0,0" width="20" height="20" normalimage="res\public\button\password_mask.png" visible="false"/>
			<Label name="PwdIsTrue" float="true" pos="376,53,0,0" width="16" height="16" bkimage="res/public/button/judge_right.png" gdiplus="true" visible="false" />
			<Label name="TextPwdIsTrue" float="true" pos="401,53,0,0" width="100" height="16" text="密码正确" textcolor="#FF2C8C02" font="1" align="left" gdiplus="true" visible="false "/>
			<Label name="PwdIsFalse" float="true" pos="376,53,0,0" width="16" height="16" bkimage="res/public/button/judge_wrong.png" gdiplus="true" visible="false" />
			<Label name="TextPwdIsFalse" float="true" pos="401,53,0,0" width="100" height="16" text="密码错误" textcolor="#FFD81E06" font="1" align="left" gdiplus="true" visible="false "/>
			<Label float="true" pos="106,73,0,0" width="260" height="1" bkcolor="#FF8b8b8b" />

			<Label float="true" pos="0,104,0,0" width="100" height="18" text="新密码" textcolor="#FF4E4E4E" font="1" align="left" />
			<Label name="PwdIsStrong" float="true" pos="377,103,0,0" width="16" height="16" bkimage="res/public/button/password_strength_strong.png" gdiplus="true" visible="false" />
			<Label name="PwdIsMedium" float="true" pos="377,103,0,0" width="16" height="16" bkimage="res/public/button/password_strength_medium.png" gdiplus="true" visible="false" />
			<Label name="PwdIsWeak" float="true" pos="377,103,0,0" width="16" height="16" bkimage="res/public/button/password_strength_weak.png" gdiplus="true" visible="false" />
			<Label name="PwdIsNonStandard" float="true" pos="376,103,0,0" width="16" height="16" bkimage="res/public/button/judge_wrong.png" gdiplus="true" visible="false" />
			
			<Label name="TextPwdIsStrong" float="true" pos="402,103,0,0" width="100" height="16" text="强" textcolor="#FF2C8C02" font="1" align="left" gdiplus="true" visible="false "/>
			<Label name="TextPwdIsMedium" float="true" pos="402,103,0,0" width="100" height="16" text="中" textcolor="#FFFFCC00" font="1" align="left" gdiplus="true" visible="false "/>
			<Label name="TextPwdIsWeak" float="true" pos="402,103,0,0" width="100" height="16" text="弱" textcolor="#FFFF0000" font="1" align="left" gdiplus="true" visible="false "/>
			<Label name="TextPwdIsNonStandard" float="true" pos="401,103,0,0" width="100" height="16" text="密码不符合规范" textcolor="#FFFF0000" font="1" align="left" gdiplus="true" visible="false "/>
			
			<Button name="TextHelp" float="true" pos="435,103,0,0" width="32" height="16" text="帮助" textcolor="#FF53AFE4" font="1" align="left" gdiplus="true" visible="false "/>
			<ChildLayout name="PasswordHelpLay" xmlfile="Passwordhelp.xml" float="true" pos="435,120,0,0" width="266" height="290" bkcolor="FFFFFFFF" bordersize="1" bordercolor="#FFDADADA" visible="false" />
			<Label name="TextPwdIsNonStandardTip" float="true" pos="500,103,0,0" width="360" height="16" text="6-16个数字，大小写字母，符合“_”“.”,至少包含2种" textcolor="#FFCCCCCC" font="1" align="left" gdiplus="true" visible="false "/>
			<Edit name="InputNewPwd" float="true" pos="106,103,0,0" width="240" height="20" text="" textcolor="#FF4E4E4E" font="1" align="left" maxchar="16" password="true"/>
			<Button name="NewPwdVisSwitchBtn" float="true" pos="346,103,0,0" width="20" height="20" normalimage="res\public\button\password_mask.png" visible="false"/>
			<Label float="true" pos="106,123,0,0" width="260" height="1" bkcolor="#FF8b8b8b" />
			<Label name="TextInputTip" float="true" pos="106,129,0,0" width="360" height="16" text="6-16个数字，大小写字母，符合“_”“.”,至少包含2种" textcolor="#FFCCCCCC" font="1" align="left" gdiplus="true" visible="false "/>

			<Label float="true" pos="0,160,0,0" width="100" height="18" text="确认密码" textcolor="#FF4E4E4E" font="1" align="left" />
			<Edit name="InputCfmPwd" float="true" pos="106,159,0,0" width="240" height="20" text="" textcolor="#FF4E4E4E" font="1" align="left" maxchar="16" password="true"/>
			<Button name="CfmPwdVisSwitchBtn" float="true" pos="346,159,0,0" width="20" height="20" normalimage="res\public\button\password_mask.png" visible="false"/>
			<Label name="ConfirmNewPwdPass" float="true" pos="376,159,0,0" width="16" height="16" bkimage="res/public/button/judge_right.png" gdiplus="true" visible="false" />
			<Label name="ConfirmNewPwdFail" float="true" pos="376,159,0,0" width="16" height="16" bkimage="res/public/button/judge_wrong.png" gdiplus="true" visible="false" />
			<Label name="TextConfirmNewPwdPass" float="true" pos="402,159,0,0" width="100" height="16" text="密码一致" textcolor="#FF2C8C02" font="1" align="left" gdiplus="true" visible="false "/>
			<Label name="TextConfirmNewPwdFail" float="true" pos="402,159,0,0" width="100" height="16" text="密码不一致" textcolor="#FFFF0000" font="1" align="left" gdiplus="true" visible="false "/>
			<Label float="true" pos="106,179,0,0" width="260" height="1" bkcolor="#FF8b8b8b" />
		</VerticalLayout>
		
		<Case name="caseInputCurPwd">			<!--输入当前密码-->
			<CurPwdVisSwitchBtn visible="true" />
			<NewPwdVisSwitchBtn visible="false"/>
			<CfmPwdVisSwitchBtn visible="false"/>
			
			<PwdIsTrue visible="false"/>
			<PwdIsFalse visible="false"/>
			<TextPwdIsTrue visible="false"/>
			<TextPwdIsFalse visible="false"/>
			
			<PwdIsWeak visible="false"/>
			<PwdIsMedium visible="false"/>
			<PwdIsStrong visible="false"/>
			<PwdIsNonStandard visible="false"/>
			<TextPwdIsWeak visible="false"/>
			<TextPwdIsMedium visible="false"/>
			<TextPwdIsStrong visible="false"/>
			<TextPwdIsNonStandard visible="false"/>
			<TextHelp visible="false"/>
			<TextPwdIsNonStandardTip visible="false"/>
			<TextInputTip visible="false"/>
			
			<ConfirmNewPwdPass visible="false"/>
			<ConfirmNewPwdFail visible="false"/>
			<TextConfirmNewPwdPass visible="false"/>
			<TextConfirmNewPwdFail visible="false"/>
		</Case>
		<Case name="caseCurPwdIsVisible">		<!--当前密码可见-->
			<InputCurPwd password="false"/>
			<CurPwdVisSwitchBtn normalimage="res\public\button\password_plain.png"/>
		</Case>
		<Case name="caseCurPwdIsInvisible">		<!--当前密码不可见-->
			<InputCurPwd password="true"/>
			<CurPwdVisSwitchBtn normalimage="res\public\button\password_mask.png"/>
		</Case>
		<Case name="caseIsPwdTrue">				<!--当前密码正确-->
			<CurPwdVisSwitchBtn visible="false" />
			<PwdIsTrue visible="true"/>
			<TextPwdIsTrue visible="true"/>
		</Case>
		<Case name="caseIsPwdFalse">			<!--当前密码错误-->
			<CurPwdVisSwitchBtn visible="false"/>
			<PwdIsFalse visible="true"/>
			<TextPwdIsFalse visible="true"/>
		</Case>
		<Case name="caseInputNewPwd">			<!--输入新密码-->
			<CurPwdVisSwitchBtn visible="false"/>
			<NewPwdVisSwitchBtn visible="true"/>
			<CfmPwdVisSwitchBtn visible="false"/>
			
			<PwdIsWeak visible="false"/>
			<PwdIsMedium visible="false"/>
			<PwdIsStrong visible="false"/>
			<PwdIsNonStandard visible="false"/>
			<TextPwdIsWeak visible="false"/>
			<TextPwdIsMedium visible="false"/>
			<TextPwdIsStrong visible="false"/>
			<TextPwdIsNonStandard visible="false"/>
			<TextHelp visible="false"/>
			<TextPwdIsNonStandardTip visible="false"/>
			<TextInputTip visible="true"/>
			
			<!--CfmPwdVisSwitchBtn visible="false"/-->
			<ConfirmNewPwdPass visible="false"/>
			<ConfirmNewPwdFail visible="false"/>
			<TextConfirmNewPwdPass visible="false"/>
			<TextConfirmNewPwdFail visible="false"/>
		</Case>
		<Case name="caseNewPwdIsVisible">		<!--新密码可见-->
			<InputNewPwd password="false"/>
			<NewPwdVisSwitchBtn normalimage="res\public\button\password_plain.png"/>
		</Case>
		<Case name="caseNewPwdIsInvisible">		<!--新密码不可见-->
			<InputNewPwd password="true"/>
			<NewPwdVisSwitchBtn normalimage="res\public\button\password_mask.png"/>
		</Case>
		<Case name="caseNewPwdIsStrong">		<!--新密码强度强-->
			<PwdIsStrong visible="true"/>
			<PwdIsMedium visible="false"/>
			<PwdIsWeak visible="false"/>
			<PwdIsNonStandard visible="false"/>
			<TextPwdIsStrong visible="true"/>
			<TextPwdIsMedium visible="false"/>
			<TextPwdIsWeak visible="false"/>
			<TextPwdIsNonStandard visible="false"/>
			<TextHelp visible="true"/>
			<TextPwdIsNonStandardTip visible="false"/>
			<TextInputTip visible="true"/>
		</Case>
		<Case name="caseNewPwdIsMedium">		<!--新密码强度中-->
			<PwdIsStrong visible="false"/>
			<PwdIsMedium visible="true"/>
			<PwdIsWeak visible="false"/>
			<PwdIsNonStandard visible="false"/>
			<TextPwdIsStrong visible="false"/>
			<TextPwdIsMedium visible="true"/>
			<TextPwdIsWeak visible="false"/>
			<TextPwdIsNonStandard visible="false"/>
			<TextHelp visible="true"/>
			<TextPwdIsNonStandardTip visible="false"/>
			<TextInputTip visible="true"/>
		</Case>
		<Case name="caseNewPwdIsWeak">			<!--新密码强度弱-->
			<PwdIsStrong visible="false"/>
			<PwdIsMedium visible="false"/>
			<PwdIsWeak visible="true"/>
			<PwdIsNonStandard visible="false"/>
			<TextPwdIsStrong visible="false"/>
			<TextPwdIsMedium visible="false"/>
			<TextPwdIsWeak visible="true"/>
			<TextPwdIsNonStandard visible="false"/>
			<TextHelp visible="true"/>
			<TextPwdIsNonStandardTip visible="false"/>
			<TextInputTip visible="true"/>
		</Case>
		<Case name="caseNewPwdIsNonstandard">	<!--新密码不符合规范-->
			<PwdIsStrong visible="false"/>
			<PwdIsMedium visible="false"/>
			<PwdIsWeak visible="false"/>
			<PwdIsNonStandard visible="true"/>
			<TextPwdIsStrong visible="false"/>
			<TextPwdIsMedium visible="false"/>
			<TextPwdIsWeak visible="false"/>
			<TextPwdIsNonStandard visible="true"/>
			<TextHelp visible="false"/>
			<TextPwdIsNonStandardTip visible="true"/>
			<TextInputTip visible="false"/>
		</Case>
		<Case name="caseInputCfmNewPwd">	<!--确认密码输入-->
			<CurPwdVisSwitchBtn visible="false"/>
			<NewPwdVisSwitchBtn visible="false"/>
			<CfmPwdVisSwitchBtn visible="true"/>
			
			<TextInputTip visible="false"/>
			
			<ConfirmNewPwdPass visible="false"/>
			<ConfirmNewPwdFail visible="false"/>
			<TextConfirmNewPwdPass visible="false"/>
			<TextConfirmNewPwdFail visible="false"/>
		</Case>
		<Case name="caseCfmPwdIsVisible">		<!--确认密码可见-->
			<InputCfmPwd password="false"/>
			<CfmPwdVisSwitchBtn normalimage="res\public\button\password_plain.png"/>
		</Case>
		<Case name="caseCfmPwdIsInvisible">		<!--确认密码不可见-->
			<InputCfmPwd password="true"/>
			<CfmPwdVisSwitchBtn normalimage="res\public\button\password_mask.png"/>
		</Case>
		<Case name="caseConfirmNewPwdPass">		<!--密码一致-->
			<CfmPwdVisSwitchBtn visible="false"/>
			<ConfirmNewPwdPass visible="true"/>
			<ConfirmNewPwdFail visible="false"/>
			<TextConfirmNewPwdPass visible="true"/>
			<TextConfirmNewPwdFail visible="false"/>
		</Case>
		<Case name="caseConfirmNewPwdFail">		<!--密码不一致-->
			<CfmPwdVisSwitchBtn visible="false"/>
			<ConfirmNewPwdPass visible="false"/>
			<ConfirmNewPwdFail visible="true"/>
			<TextConfirmNewPwdPass visible="false"/>
			<TextConfirmNewPwdFail visible="true"/>
		</Case>
		<Case name="caseShowHelpInfo">			<!--显示帮助信息-->
			<PasswordHelpLay visible="true"/>
		</Case>
		<Case name="caseHideHelpInfo">			<!--隐藏帮助信息-->
			<PasswordHelpLay visible="false"/>
		</Case>

	</VerticalLayout>
</PageModifyPassword>